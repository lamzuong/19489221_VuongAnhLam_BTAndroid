<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9FFFFFF"
    tools:context=".SecondActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView_sanpham"
            android:layout_width="129dp"
            android:layout_height="145dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/vsmart_live_xanh" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="185dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="31dp"
            android:text="Điện Thoại Vsmart Joy 3 Hàng chính hãng"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/view"
            android:layout_width="413dp"
            android:layout_height="570dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="161dp"
            android:background="#95605353" />

        <ImageView
            android:id="@+id/imageCyan"
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/cyan" />

        <ImageView
            android:id="@+id/imageRed"
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="280dp"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageBlack"
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="380dp"
            app:srcCompat="@drawable/black" />

        <ImageView
            android:id="@+id/imageBlue"
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="480dp"
            app:srcCompat="@drawable/blue" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonXong"
            android:layout_width="326dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/custom_xong"
            android:backgroundTint="@null"
            android:text="Xong"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>