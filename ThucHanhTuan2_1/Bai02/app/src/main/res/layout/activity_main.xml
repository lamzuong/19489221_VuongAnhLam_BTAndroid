<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fahrenheit"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/editText_F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Celsius"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/editText_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:id="@+id/button_ConvertC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:backgroundTint="#3CD6D5D5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Convert To \nCelsius"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_ConvertF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:backgroundTint="#3CD6D5D5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Convert To Fahrenheit"
            android:textAllCaps="false"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_Clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:backgroundTint="#3CD6D5D5"
        android:text="Clear"
        android:textAllCaps="false"/>
</LinearLayout>